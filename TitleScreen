import mayflower.*;

public class TitleScreen extends World
{
    Button startButton;
    MouseInfo mouse;
    public TitleScreen()
    {
        setBackground(new MayflowerImage(1000, 1000));
        showText("ixl", 500, 500, Color.MEGENTA);
        startButton = new Button("img/start.jpg");
        addObject(startButton, 500, 510);
        mouse = new MouseInfo(startButton, Mouse.LEFT_BUTTON, 0, 0, 0);
        System.out.println("done");
    }
    
    public void act()
    {
        if(mouse.getActor().equals(startButton))
        {
            System.out.println("clicked");
        }
    }
}
