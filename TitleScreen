import mayflower.*;

public class TitleScreen extends World
{
    Button startButton;
    MouseInfo mouse;
    PomodoroTimer timer;
    
    public TitleScreen()
    {
        setBackground(new MayflowerImage(1000, 1000));
        showText("ixl", 500, 500, Color.MEGENTA);
        startButton = new Button("img/start.jpg");
        addObject(startButton, 500, 510);
        System.out.println("done");
        
        timer = new PomodoroTimer(25);
    }
    
    public void act()
    {
        mouse = Mayflower.getMouseInfo();
        showText("" + timer.getFormattedTime(), 30, 30, Color.ORANGE);
        if(mouse.getActor() != null && mouse.getActor().equals(startButton))
        {
            System.out.println("clicked");
            startButton.onClick();
        }
    }
}
