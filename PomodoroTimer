import mayflower.*;

/**
 * Write a description of class PomodoroTimer here.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
public class PomodoroTimer extends Timer
{
    private int startSec;
    
    public PomodoroTimer(int startMin)
    {
        super(0);
        startSec = startMin * 60;
    }
    
    public int getSecondsElapsed()
    {
        return -(int)(super.getTimeLeft()/1000000000);
    }
    
    public int getSecondsLeft()
    {
        return startSec - getSecondsElapsed();
    }
    
    public String getFormattedTime()
    {
        int min = getSecondsLeft() / 60;
        int sec = getSecondsLeft() % 60;
        String ret = "";
        if(min != 0)
            ret += min + ":";
        if(sec < 10)
            ret += "0" + sec;
        else
            ret += sec;
        return ret;
    }
}
